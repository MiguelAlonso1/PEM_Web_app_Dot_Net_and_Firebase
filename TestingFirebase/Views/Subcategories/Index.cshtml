@model IEnumerable<Subcategory>
<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#little_table').DataTable();
        });
    </script>
</head>
<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">@ViewBag.MainCategoryName SubKategories</h2>
            </div>
            <div class="col-6 btn-group text-right" role="group">
                <a asp-controller="Subcategories" asp-action="Create" class="btn btn-primary mx-1">Create new SubKategory</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark  mx-1">Back</a>
            </div>
        </div>
    </div>
    <div class="row" style="width:100%">
        @if (Model.Count() > 0)
        {
            <table id="little_table" class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Image </th>
                        <th>Title </th>
                        <th>Maincategory ID </th>
                        <th>Links </th>
                        <th>Update</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kat in Model)
                    {
                    <tr>
                        <td>
                            <a asp-controller="Subcategories" asp-action="Details" asp-route-id="@kat.Key" class="btn btn-outline-light">
                                <img class="media-object mx-4" src="\images\img.png" alt="image info" width="128" height="64" style="border: 2px solid #43ac6a; border-radius: 25px ">
                                <b>ID: @kat.Key</b>
                            </a>
                        </td>
                        <td>
                            <h4 class="media-heading text-dark"><strong>@kat.Title</strong></h4>
                        </td>
                        <td>
                            <h4 class="media-heading text-dark"><strong>@kat.SubId</strong></h4>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <div class="pl-2 pb-4 mx-1"><a asp-controller="Subcategories" asp-action="Details" asp-route-id="@kat.Key" class="btn btn-primary">Go to Details</a></div>

                            </div>
                        </td>
                        <td>
                            <div class="pr-2 pb-4 mx-1"><a asp-controller="Categories" asp-action="Delete" asp-route-id="@kat.Key" class="btn btn-danger">Delete</a></div>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items created yet</p>
        }
    </div>


</body>
</html>

